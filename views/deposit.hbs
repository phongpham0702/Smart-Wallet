<div class="container" style="margin-bottom: 3.5rem;">

  <form action="/deposit" id="userFunctionForm" method="POST">
    <h2>Nạp tiền</h2>
    <div class="form-content">
      <div class="user__form__icon">
        <img src="/images/userFormIcon/deposit.png" />

      </div>
      <div class="form-group">
        <label for="cardNumber">Số thẻ:</label>
        <input
          type="text"
          class="form-control"
          id="cardNumber"
          placeholder="Nhập số thẻ"
          name="cardNumber"
          value="{{{preCardNumber}}}"
        />

      </div>
      <div class="form-group">
        <label for="exp">Ngày hết hạn:</label>
        <input
          type="date"
          class="form-control"
          id="exp"
          name="exp"
          value="{{{preExp}}}"
        />

      </div>
      <div class="form-group">
        <label for="cvv">CVV:</label>
        <input
          type="text"
          class="form-control"
          id="cvv"
          name="cvv"
          placeholder="Nhập mã CVV"
          value="{{{preCVV}}}"
        />

      </div>
      <div class="form-group">
        <label for="amount">Số tiền:</label>
        <input
          type="number"
          class="form-control"
          id="amount"
          name="amount"
          placeholder="Nhập số tiền cần nạp"
        />

      </div>
      {{#if error.isError}}
        <div class="invalid-feedback">{{{error.errorMessage}}}</div>{{/if}}
      <div class="option">
        <a href="/" class="btn btn-secondary">Trở lại</a>
        <button type="submit" class="btn btn-primary">Nạp tiền</button>
      </div>

    </div>

  </form>

</div>