<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SmartWallet</title>
    <link rel="icon" type="image/x-icon" href="/images/logo.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
    />

    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body>
    <!-- Horizontal navigation bar -->
    <header id="nav-bar-header">

      <div class="header-content">

        <!-- logo -->
        <div class="logo">
          {{! https://drive.google.com/uc?export=view&id=1YvP6uMZuw7LSANxNQhZFlRzQ39eDk8AB }}
          <a href="/">
            <img
              src="/images/logo.png"
              alt="logo"
              style="width: 60px; height: 65px"
            />
          </a>
          <p id="logo-Name">SmartWallet</p>

        </div>

        <div class="container hamburger" onclick="SideNavControl(this);">
          <div class="bar1"></div>
          <div class="bar2"></div>
          <div class="bar3"></div>
        </div>

        <nav class="nav-bar">

          <!-- header profile -->
          <div class="header-profile">
            <!-- profile content -->
            <div class="click-profile">
              <div class="profile-wrap" onclick="showUserOption();"></div>
              <div style="padding-right: 1.25rem;">
                <p class="header-profile-fs-1">Xin chào,
                  <span id="header-profile-username">
                    {{user.fullName}}
                  </span>
                </p>
                {{#ifCond accountStatus}}{{/ifCond}}
              </div>
              <img src="/images/user.png" alt="" width="50px" />
            </div>

            <div class="userOption dropdown-menu">
              <a href="/admin/profile"><img
                  src="/images/user_profile.png"
                  width="30px"
                /><span>Profile</span></a>
              <a href="/logout"><img
                  src="/images/log-out.png"
                  width="30px"
                /><span>Log out</span></a>
            </div>

          </div>
        </nav>
      </div>
    </header>

    <!-- Side navigation bar -->
    <div class="side-nav-bar">

      <div class="admin-menu">

        <!-- deposit -->
        <a href="/admin/pending" class="menu-item">
          <img src="/images/pending.png" alt="pending" />
          <p class="side-nav-text side-nav-menu-text" style="font-size: 15px;">Tài khoản chờ duyệt</p>
        </a>

        <!-- withdraw -->
        <a href="/admin/activated" class="menu-item">
          <img src="/images/activated.png" alt="activated" />
          <p class="side-nav-text side-nav-menu-text" style="font-size: 15px;">Tài khoản đã kích hoạt</p>
        </a>

        <!-- transfer -->
        <a href="" class="menu-item">
          <img src="/images/disabled.png" alt="disabled" />
          <p class="side-nav-text side-nav-menu-text" style="font-size: 15px;">Tài khoản bị vô hiệu hóa</p>
        </a>

        <!-- buy phone card -->
        <a href="" class="menu-item">
          <img src="/images/locked.png" alt="locked" />
          <p class="side-nav-text side-nav-menu-text" style="font-size: 15px;">Tài khoản bị khóa</p>
        </a>

        <!-- transaction -->
        <a href="/admin/transactionApproval/withdraw" class="menu-item">
          <img src="/images/transaction.png" alt="transaction" />
          <p class="side-nav-text side-nav-menu-text" style="font-size: 15px;">Yêu cầu rút tiền chờ duyệt</p>
        </a>
      </div>
    </div>
    <div class="wrapper" id="window-wrapper"></div>
    <!-- Main content -->
    <div class="main">
      <!-- Website body -->
      <div class="content-holder" id="admin">
        {{{body}}}
      </div>

    </div>
    <footer>
      <p>Copyright ©️ Designed & Developed by <a href="#" style="text-decoration: none; color: rgb(95, 189, 251)">SmartWalletTeam</a> 2022</p>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"
      integrity="sha512-ElRFoEQdI5Ht6kZvyzXhYG9NqjtkmlkfYk0wr6wHxU9JEHakS7UJZNeml5ALk+8IKlU6jDgMabC3vkumRokgJA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"
    ></script>
    <script src="/javascripts/main.js"></script>

  </body>

</html>