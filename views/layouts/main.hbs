<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SmartWallet</title>
    <link rel="icon" type="image/x-icon" href="/images/logo.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
    />

    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body>
    <!-- Horizontal navigation bar -->
    <header id="nav-bar-header">

      <div class="header-content">

        <!-- logo -->
        <div class="logo">
          {{! https://drive.google.com/uc?export=view&id=1YvP6uMZuw7LSANxNQhZFlRzQ39eDk8AB }}
          <img
            src="/images/logo.png"
            alt="logo"
            style="width: 60px; height: 65px"
          />
          <p id="logo-Name">SmartWallet</p>

        </div>

        <div class="container hamburger" onclick="SideNavControl(this);">
          <div class="bar1"></div>
          <div class="bar2"></div>
          <div class="bar3"></div>
        </div>

        <nav class="nav-bar">

          <!-- header profile -->
          <div class="header-profile">
            <div class="notification-icon">
              {{! <i class="bi bi-bell"><sup class="count-amount">0</sup></i> }}
              <div class="bell-hover">
                <div class="bell-wrap" onclick="showNotification();"></div>
                <img src="/images/bell.png" alt="" srcset="" />
                <span class="notification-counter">5</span>
              </div>

            </div>

            <!-- notification dropdown menu -->
            <div class="notification-dropdown dropdown-menu">
              <div class="notification-box">
                <ul class="notification-list">
                  <li>
                    <div class="notification-item">
                      <img src="/images/user.png" alt="" width="50px" />
                      <div class="item-body">
                        <h6>Nguyen Van A đã chuyển cho bạn 50.000 VND</h6>
                        <span>29 July 2020 - 02:26 PM</span>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="notification-item">
                      <img src="/images/user.png" alt="" width="50px" />
                      <div class="item-body">
                        <h6>Nguyen Van A đã chuyển cho bạn 50.000 VND</h6>
                        <span>29 July 2020 - 02:26 PM</span>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="notification-item">
                      <img src="/images/user.png" alt="" width="50px" />
                      <div class="item-body">
                        <h6>Nguyen Van A đã chuyển cho bạn 50.000 VND</h6>
                        <span>29 July 2020 - 02:26 PM</span>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="notification-item">
                      <img src="/images/user.png" alt="" width="50px" />
                      <div class="item-body">
                        <h6>Nguyen Van A đã chuyển cho bạn 50.000 VND</h6>
                        <span>29 July 2020 - 02:26 PM</span>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="notification-item">
                      <img src="/images/user.png" alt="" width="50px" />
                      <div class="item-body">
                        <h6>Nguyen Van A đã chuyển cho bạn 50.000 VND</h6>
                        <span>29 July 2020 - 02:26 PM</span>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>
              <a href="javascript:void(0)" class="view-all-notification">

                Xem tất cả &nbsp;<i class="bi bi-arrow-right"></i>
              </a>
            </div>

            <!-- profile content -->
            <div class="click-profile">
              <div class="profile-wrap" onclick="showUserOption();"></div>
              <div class="profile-info">
                <p class="header-profile-fs-1">Xin chào,
                  <span id="header-profile-username">

                      {{user.fullName}}

                  </span>
                </p>
                {{#ifCond accountStatus}}{{/ifCond}}

                {{!-- <span id="role" class="header-profile-fs-2">
                  Tài khoãn đã kích hoạt</span> --}}
              </div>
              <img src="/images/user.png" alt="" width="50px" />
            </div>

            <div class="userOption dropdown-menu">
              <a href="/profile"><img
                  src="/images/user_profile.png"
                  width="30px"
                /><span>Thông tin</span></a>
                <a href="/changepassword"><img
                  src="/images/changepassword.png"
                  width="30px"
                /><span>Đổi mật khẩu</span></a>
              <a href="/logout"><img
                  src="/images/log-out.png"
                  width="30px"
                /><span>Đăng xuất</span></a>
            </div>

          </div>
        </nav>
      </div>
    </header>

    <!-- Side navigation bar -->
    <div class="side-nav-bar">

      <div class="menu">

        <!-- deposit -->
        <div id="deposit" class="menu-item {{#if depositButton}} menu-item-active  {{/if}}">
          <div class="item-wrapper" onclick="window.location.href ='/deposit'"></div>
          <img src="/images/deposit.png" alt="deposit" />
          <p class="side-nav-text side-nav-menu-text">Nạp tiền</p>
        </div>

        <!-- withdraw -->
        <div id="withdraw" class="menu-item {{#if withdrawButton}} menu-item-active  {{/if}}">
          <div class="item-wrapper" onclick="window.location.href ='/withdraw'"></div>
          <img src="/images/withdraw.png" alt="withdraw" />
          <p class="side-nav-text side-nav-menu-text">Rút tiền</p>
        </div>

        <!-- transfer -->
        <div id="transfer" class="menu-item {{#if transferButton}} menu-item-active  {{/if}}">
          <div class="item-wrapper" onclick="window.location.href ='/transfer'"></div>
          <img src="/images/transfer.png" alt="transfer" />
          <p class="side-nav-text side-nav-menu-text">Chuyển khoản</p>
        </div>

        <!-- buy phone card -->
        <div id="buy" class="menu-item {{#if buyButton}} menu-item-active  {{/if}}">
          <div class="item-wrapper" onclick="window.location.href = '/buyphonecard'"></div>
          <img src="/images/phonecard.png" alt="phonecard" />
          <p class="side-nav-text side-nav-menu-text">Mua thẻ điện thoại</p>
        </div>

        <!-- transaction -->
        <div id="transaction" class="menu-item {{#if transactionButton}} menu-item-active  {{/if}}">
          <div class="item-wrapper" onclick="window.location.href = '/transaction'"></div>
          <img src="/images/transaction.png" alt="transaction" />
          <p class="side-nav-text side-nav-menu-text">Lịch sử giao dịch</p>
        </div>
      </div>
    </div>

    <div class="wrapper" id="window-wrapper"></div>

    <!-- Main content -->
    <div class="main">
      <!-- Website body -->
      <div class="content-holder" id="content-holder">
        {{{body}}}
      </div>

    </div>
    <footer>
      <p>Copyright ©️ Designed & Developed by <a href="#" style="text-decoration: none; color: rgb(95, 189, 251)">SmartWalletTeam</a> 2022</p>
    </footer>
    

    
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"
      integrity="sha512-ElRFoEQdI5Ht6kZvyzXhYG9NqjtkmlkfYk0wr6wHxU9JEHakS7UJZNeml5ALk+8IKlU6jDgMabC3vkumRokgJA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"
    ></script>

    <script src="/javascripts/main.js"></script>

  </body>

</html>