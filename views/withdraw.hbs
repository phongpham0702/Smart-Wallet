<div class="container">

  <form action="/withdraw" id="userFunctionForm" method="POST">
    <h2>Rút tiền</h2>
    <div class="form-content">
      <div class="user__form__icon">
        <img src="/images/userFormIcon/withdraw.png" />

      </div>
      <div class="form-group">
        <label for="cardNumber">Số thẻ:</label>
        <input
          type="text"
          class="form-control"
          id="cardNumber"
          placeholder="Nhập số thẻ"
          name="cardNumber"
          value="{{{preCardNumber}}}"
        />
      </div>
      <div class="form-group">
        <label for="exp">Ngày hết hạn:</label>
        <input
          type="date"
          class="form-control"
          id="exp"
          name="exp"
          value="{{{preExp}}}"
        />
      </div>
      <div class="form-group">
        <label for="cvv">CVV:</label>
        <input
          type="text"
          class="form-control"
          id="cvv"
          name="cvv"
          placeholder="Nhập mã CVV"
          value="{{{preCVV}}}"
        />
      </div>
      <div class="form-group">
        <label for="amount">Số tiền:</label>
        <input
          type="number"
          class="form-control"
          id="amount"
          name="amount"
          placeholder="Nhập số tiền cần rút"
          oninput="withdrawFee(this.value)"
        />
        <div style="color: red;font-weight: 300;font-size:14px">*Phí rút tiền là
          5%</div>
        <span
          id="withdrawFeeValue"
          style="color: red;font-weight: 300;font-size:14px"
        ></span>
      </div>
      <div class="form-group" style="margin-top: 0px;">
        <label for="note">Ghi chú:</label>
        <input
          type="text"
          class="form-control"
          id="note"
          name="note"
          placeholder="Ghi chú của bạn"
          value="{{{preNote}}}"
        />
      </div>
      {{#if error.isError}}
        <div class="invalid-feedback">{{{error.errorMessage}}}</div>{{/if}}
      <div class="option">
        <a href="/" class="btn btn-secondary">Trở lại</a>
        <button type="submit" class="btn btn-primary">Rút tiền</button>
      </div>

    </div>

  </form>

</div>